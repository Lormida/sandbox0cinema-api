{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,  
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "src/*": ["./src/*"],
    },
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "./test/**/*.ts", "./utils/**/*.ts", "./prisma/**/*.ts"]
}
